<div class="col-lg-12 mt-5 card-form__body">
  <div class="table-responsive pl-2 pr-2">
    <div class="input-group">
      <%= form_tag(search_recipe_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Recipe", class: 'form-control' %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: 'btn btn-default' %>
        </span>
      <% end %>
    </div>
    <h1>Ingredients</h1>
    <table class="table mb-0 thead-border-top-0 mt-1 table-hover">
      <thead class="table-info">
        <tr>
          <th>name </th>
          <th>created_at </th>
          <th>updated at </th>
          <th colspan="1">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @ingredients.each do |ingredient| %>
          <tr class="redirect_to_show cursor-pointer">
            <td><%= ingredient.name %></td>
            <td><%= ingredient.created_at.strftime("%a %m/%d/%y") %></td>
            <td><%= ingredient.updated_at.strftime("%a %m/%d/%y") %></td>
            <td>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="mb-5">
    <div class="flickr_pagination">
      <div class="page_info" >
        <%= page_entries_info @ingredients %>
      </div >
      <div style="margin-left: 25%">
        <%= will_paginate @ingredients %>
      </div>
    </div>
  </div>
</div>

