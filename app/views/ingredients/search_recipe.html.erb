<div class="col-lg-12 mt-5 card-form__body">
  <div class="table-responsive pl-2 pr-2">
    <table class="table mb-0 thead-border-top-0 mt-1  table-hover">
      <thead class="table-info">
        <tr>
          <th>Name </th>
          <th>Recipe </th>
          <th>Category </th>
          <th>Author </th>
          <th colspan="1">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @ingredients.each do |ingredient| %>
          <tr class="redirect_to_show cursor-pointer">
            <td><%= ingredient.name %></td>
            <td><%= ingredient.recipe.title %></td>
            <td><%= ingredient.recipe.category %></td>
            <td><%= ingredient.recipe.author %></td>
            <td>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="mb-5">
    <div class="flickr_pagination">
      <div class="page_info" >
        <%= page_entries_info @ingredients %>
      </div >
      <div style="margin-left: 25%">
        <%= will_paginate @ingredients %>
      </div>
    </div>
  </div>
</div>

